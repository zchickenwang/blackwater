<h1 id="cart_title">Cart</h1>

<div id="cart_meat">


  <% if @cart.empty? %>
      <h2> 
        <br /> <br />
        <br /> <br />
        nothing here /
        an empty cart rattles loudly </h2>
  <% else %>

    <% total = 0 %>

    <table id="cart_list">
      <% @cart.each do | id, quantity | %>
          <% product = Product.find_by_id(id) %>

          <tr>
              <td>
                <%= link_to product.title, product %>
              </td>
              <td class="deux">
                <h3> <%= product.price %> </h3>
              </td>
              <td>
                <span class="quantity">(<%= quantity %>)</span>
              </td>
          </tr>

          <% total += quantity * product.price %>

      <% end %>
    </table>

    <div id="cart_pay">

      <%= form_tag('/charges/success', method: :get) do %>
        <article>
          <% if flash[:error].present? %>
            <div id="error_explanation">
              <p><%= flash[:error] %></p>
            </div>
          <% end %>
          <label class="total">
            <h4> <span id="special"> TOTAL </span> <%= total %> </h4>
          </label>
        </article>
        <input type="hidden" name="prix" value="<%= total * 100 %>">
        <span style="filter: invert(0%) grayscale(77%) opacity(66%);">
          <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                data-description="BLACKWATER ATELIER"
                data-amount="<%= total * 100 %>"
                data-locale="auto">
          </script>
        </span>
      <% end %>
    </div>

    <div id="clearcart">
      <a href="<%= cart_clear_path %>"> clear cart </a>
    </div>
  <% end %>

</div>
