#nav{
    position: fixed;
    width: 50%;
    height: 10%;
    background: transparent;
    left: 50%;
    top: 1%;
    margin-left: -25%;
}

#shop_nav a, #cart_nav a{
    font-family: AdobeCaslon;
    font-size: 1.1em;
    font-weight: 300;
    line-height: 20px;
    color: #000;
    padding: 0 20px;
    text-decoration: none;
    -webkit-transition: all 2s ease-out;
    -moz-transition: all 2s ease-out;
    -o-transition: all 2s ease-out;
    transition: all 2s ease-out;
}
#shop_nav a:hover, #cart_nav a:hover, .footer a:hover{
    background-color: transparent;
    color: transparent;
    text-shadow: 0 0 5px rgba(0,0,0,0.5);
    -webkit-transition: all 1s ease-in;
    -moz-transition: all 1s ease-in;
    -o-transition: all 1s ease-in;
    transition: all 1s ease-in;
    /* weight */
}

.footer a{
    font-family: AdobeCaslon;
    font-size: 1.0em;
    font-weight: 300;
    line-height: 20px;
    color: #000;
    padding: 0 20px;
    text-decoration: none;
    line-height: .3em;
    -webkit-transition: all 2s ease-out;
    -moz-transition: all 2s ease-out;
    -o-transition: all 2s ease-out;
    transition: all 2s ease-out;
}

#shop_nav{
    margin: 0 0 0 5%;
    float: left;
}

#cart_nav{
    margin: 0 5% 0 0;
    float: right;
}   

.footer h3{
    font-family: BrandonGrotesque;
    font-weight: 200;
    font-size: 0.96em;
    letter-spacing: 0.05em;
    color: #000;
    cursor: default;
}

#main_wrap{
    width: 90%;
    float: left;
    margin: 10% 5% 0 5%;
}

#logo{
    text-align: center;
}

#logo img{
    width: 4.5%;
    margin-bottom: -1px;
    height: auto;
}

#logo a{
    text-decoration: none;
}
#logo a:hover{
    background-color: transparent;
}
#logo a:hover h2{
    color: transparent;
    text-shadow: 0 0 5px rgba(0,0,0,0.5);
    -webkit-transition: all 1s ease-in;
    -moz-transition: all 1s ease-in;
    -o-transition: all 1s ease-in;
    transition: all 1s ease-in;
}

#logo h1{
    font-family: BrandonGrotesque;
    font-weight: 500;
    font-size: 1.05em;
    letter-spacing: 0.05em;
    color: #000;
    -webkit-transition: all 2s ease-out;
    -moz-transition: all 2s ease-out;
    -o-transition: all 2s ease-out;
    transition: all 2s ease-out;

}

#logo a:hover h1{
    color: transparent;
   text-shadow: 0 0 5px rgba(0,0,0,0.5);
   -webkit-transition: all 1s ease-in;
    -moz-transition: all 1s ease-in;
    -o-transition: all 1s ease-in;
    transition: all 1s ease-in;
}

#logo h2{
    font-family: AdobeCaslon;
    font-weight: 300;
    font-size: 1.00em;
    letter-spacing: 0.03em;
    color: #000;
    margin-top: -3px;
    -webkit-transition: all 2s ease-out;
    -moz-transition: all 2s ease-out;
    -o-transition: all 2s ease-out;
    transition: all 2s ease-out;
}

#logo a:hover img{
    -webkit-filter: blur(4px);
    -webkit-transition: all 1s ease-in;
    -moz-transition: all 1s ease-in;
    -o-transition: all 1s ease-in;
    transition: all 1s ease-in;
}

#logo img{
    -webkit-transition: all 2s ease-out;
    -moz-transition: all 2s ease-out;
    -o-transition: all 2s ease-out;
    transition: all 2s ease-out;
}

#alerts{
    position: relative;
    top: 0;
    z-index: -1;
}




#login{
    text-align: center;
    margin-top: 11%;
    text-transform: uppercase;
    font-family: BrandonGrotesque;
    font-weight: 500;
    font-size: 1.0em;
    letter-spacing: 0.05em;
    color: #333333;
    line-height: 100%;
}

.field{
    text-align: center;
}

.field p{
    font-family: AdobeCaslon;
    font-size: 1em;
    font-weight: 300;
    letter-spacing: 0.03em;
}

.actions{
    text-align: center;
}

#login_deet{
