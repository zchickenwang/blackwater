*{
    margin: 0;
    padding: 0;
}

html, body{
    height: 100%;
}

body{

    z-index: 0;
    margin: 0;
    padding: 0;
}

.wrapper {
    min-height: 100%;
    height: auto !important;
    height: 100%;
    margin: 0 auto -3.5em;
}
.footer, .push {
    height: 3.5em;
    text-align: center;
}


