        }






#nav{
    position: fixed;
    width: 50%;
    height: 10%;
    background: transparent;
    left: 50%;
    top: 1%;
    margin-left: -25%;
}

#shop_nav a, #cart_nav a{
    font-family: AdobeCaslon;
    font-size: 1.1em;
    font-weight: 300;
    line-height: 20px;
    color: #000;
    padding: 0 20px;
    text-decoration: none;
}
#shop_nav a:hover, #cart_nav a:hover, .footer a:hover{
    background-color: transparent;
    /* weight */
}

.footer a{
    font-family: AdobeCaslon;
    font-size: 1.1em;
    font-weight: 300;
    line-height: 20px;
    color: #000;
    padding: 0 20px;
    text-decoration: none;
    margin-bottom: -5px;
}

#shop_nav{
    margin: 0 0 0 5%;
    float: left;
}

#cart_nav{
    margin: 0 5% 0 0;
    float: right;
}

.footer h3{
    font-family: BrandonGrotesque;
    font-weight: 200;
    font-size: 1.0em;
    letter-spacing: 0.05em;
    color: #000;
}

#main_wrap{
    width: 90%;
    float: left;
    margin: 10% 5% 0 5%;
}

#logo{
    text-align: center;
}

#logo img{
    width: 4.5%;
    margin-bottom: -3px;
    height: auto;
}

#logo a{
    text-decoration: none;
}
#logo a:hover{
    background-color: transparent;
}

#logo h1{
    font-family: BrandonGrotesque;
    font-weight: 500;
    font-size: 1.05em;
    letter-spacing: 0.04em;
    color: #000;
}

#logo h2{
    font-family: AdobeCaslon;
    font-weight: 300;
    font-size: 1.00em;
    letter-spacing: 0.03em;
    color: #000;
    margin-top: -5px;
}

#alerts{
    position: relative;
    top: 0;
    z-index: -1;
}









